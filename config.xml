<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.ibuildermart.bqb"
        version   = "1.0.0">

    <name>Best Quote Builder</name>

    <description>
      Build quotes and find the best price!
    </description>

    <author href="http://ibuildermart.com" email="david@burstsolutions.ca">
      iBuilderMart - David Kendrick
    </author>
    
    <preference name="stay-in-webview" value="true" />

    <!-- Define the main entry-point to the application -->
    <content src="www/index.html" />

    <!-- Customize your app and platform with the preference element. -->
    <preference name="DisallowOverscroll"         value="true" />

    <!-- Define a specific version of PhoneGap to build into your app. -->
    <preference name="phonegap-version"       value="cli-8.0.0" />

    <!-- Plugins -->
    <!-- Core plugins -->
    <plugin name="cordova-plugin-whitelist"           source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-inappbrowser"        source="npm" spec="~3.0.0" />

    <!-- Define app icon and splashscreen for each platform. -->
    <platform name="android" />
    <platform name="ios" />
    <platform name="windows" />

    <access origin="https://www.ibuildermart.com" />

    <!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->

    <allow-navigation href="https://www.ibuildermart.com/bqb/*" />

</widget>